{
  "name": "themost-event-app",
  "version": "0.1.0",
  "description": "Event Management Api Server with MOST Web Framework Codename Blueshift",
  "main": "dist/server.js",
  "repository": "",
  "private": true,
  "author": "",
  "scripts": {
    "start": "node bin/www.js",
    "clean": "rimraf dist/server",
    "build": "rimraf dist/server && babel server --out-dir dist/server --copy-files --source-maps",
    "themost": "themost",
    "serve": "nodemon bin/www.js",
    "debug": "nodemon --inspect-brk bin/www.js"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.5",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-decorators": "^7.1.0",
    "@babel/plugin-proposal-export-default-from": "^7.0.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.0.0",
    "@babel/plugin-transform-async-to-generator": "^7.1.0",
    "@babel/preset-env": "^7.1.6",
    "@babel/register": "^7.0.0",
    "@themost/cli": "^2.4.3",
    "babel-eslint": "^10.0.1",
    "nodemon": "^1.19.0",
    "rimraf": "^2.6.3"
  },
  "dependencies": {
    "@themost/client": "^2.1.3",
    "@themost/common": "^2.3.1",
    "@themost/data": "^2.4.1",
    "@themost/node": "^2.1.1",
    "@themost/query": "^2.3.1",
    "@themost/sqlite": "^2.2.1",
    "@themost/web": "^2.4.1",
    "@themost/xml": "^2.3.1",
    "bootstrap": "^4.1.0",
    "cron-parser": "^2.5.0",
    "cronstrue": "^1.31.0",
    "jquery": "^3.3.1",
    "lodash": "^4.17.10",
    "moment": "^2.22.2"
  },
  "nodemonConfig": {
    "watch": [
      "server",
      "bin"
    ],
    "verbose": true,
    "legacy-watch": true,
    "execMap": {
      "js": "node --require @babel/register"
    },
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "js,json"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "node": true,
      "es6": true,
      "jquery": true
    },
    "globals": {
      "describe": false,
      "it": false,
      "before": false,
      "after": false
    },
    "extends": "eslint:recommended",
    "rules": {
      "no-console": "warn",
      "no-invalid-this": "warn",
      "no-undef": "error",
      "no-unused-vars": "warn",
      "no-var": [
        "error"
      ],
      "strict": [
        2,
        "never"
      ]
    }
  }
}
